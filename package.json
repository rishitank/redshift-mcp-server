{
  "name": "redshift-mcp-server",
  "version": "0.2.0",
  "description": "Model Context Protocol server for Amazon Redshift",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsx esbuild.config.ts",
    "build:types": "npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:containers": "jest --testPathPattern=containers",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "tsx run-lint-staged.ts",
    "test:extensions": "tsx test-extensions.ts",
    "test:all": "tsx run-all-tests.ts",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "redshift",
    "model-context-protocol",
    "ai",
    "code-generation"
  ],
  "author": "Paschal Onuorah",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@shelf/winston-datadog-logs-transport": "^2.0.1",
    "pg": "^8.16.0",
    "sql-template-tag": "^5.2.1",
    "winston": "^3.17.0",
    "winston-sentry-log": "^1.0.26"
  },
  "optionalDependencies": {
    "@sentry/node": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-jest": "^28.13.5",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sql": "^3.2.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jira-prepare-commit-msg": "^1.7.2",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sql-formatter": "^15.6.4",
    "testcontainers": "^11.0.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
